@model ItPedia.ViewModels.TransactionCriteriasViewModel

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>TransactionCriteria</h4>
        <hr/>
        @Html.ValidationSummary(true, "", new {@class = "text-danger"})
        @Html.HiddenFor(model => model.TransactionCriteria.TransactionCriteriaId)

        <div class="form-group">
            @Html.LabelFor(model => model.TransactionCriteria.PerMonth, new {@class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.EditorFor(model => model.TransactionCriteria.PerMonth, new {htmlAttributes = new {@class = "form-control"}})
                @Html.ValidationMessageFor(model => model.TransactionCriteria.PerMonth, "", new {@class = "text-danger"})
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.AllCustomerCriterias, new {@class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.ListBoxFor(m => m.SelectedCustomerCriterias, Model.AllCustomerCriterias, new {@class = "select2", @style = "width: 100%" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default"/>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}