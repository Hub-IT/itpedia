@using ItPedia.Models
@{
    ViewBag.Title = "Solution - Proposals"; } 
<h2>@ViewBag.YouSelected2</h2>

<h2>@ViewBag.Title</h2>

@foreach (Proposal proposal in Model.Proposals)
{
    <div class="row">
        <div class="list-group col-md-4 col-sm-6 col-xs-12">
            <p class="list-group-item active">
                <img alt="Storage" height="20" width="20" src="/Content/img/kattekrab-mainframe.png"/> @proposal.Category.Name
            </p>
            @foreach (var proposalTerm in proposal.ProposalTerms)
            {
                @Html.ActionLink(proposalTerm.Specification + " " + proposalTerm.Term.Name, "Term", "Dictionary", new {id = proposalTerm.Term.TermId},
                    new {@class = "list-group-item"})
            }
        </div>
    </div>
}