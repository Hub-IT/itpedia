@model IEnumerable<ItPedia.Models.Term>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Source)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Content)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td class="col-md-2">
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td class="col-md-6">
            @Html.DisplayFor(modelItem => item.Content)
        </td>
        <td class="col-md-1">
            <a href="@Html.DisplayFor(modelItem => item.Source)">@Html.DisplayFor(modelItem => item.Source)</a>
        </td>
        <td class="col-md-2">
            @Html.ActionLink("Edit", "Edit", new { id=item.TermId }) |
            @Html.ActionLink("Details", "Details", new { id=item.TermId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.TermId })
        </td>
    </tr>
}

</table>
