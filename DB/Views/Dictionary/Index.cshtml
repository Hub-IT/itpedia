@using DB.Models
@{
    ViewBag.Title = ViewBag.YouSelected2;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="Dic">

    <h3 style="margin-right:30px;" class="dictionary">Select an item to view explanatory information </h3>
    
    <div style="width:200px; margin-top:10px; margin-bottom: 30px; margin-left:auto; margin-right: auto;">
        {
        <img style="width:15px; height:15px; margin-right:5px" src="~/Images/rss.png" alt="rss_icon" /> @Html.ActionLink("RSS", "Rss", "Dictionary", null, new { })
        }
    </div>
    
    <div class="row">
        @foreach (Term term in ViewBag.Terms)
        {
            <div style="padding:10px;" class="table-bordered col-md-6 col-sm-6 col-xs-12">
                @Html.ActionLink(term.Name, "Term", "Dictionary", new { id = term.Name }, null)
            </div>
        }            
    </div


</div>