@{
    ViewBag.Title = "Configuration";
}

@section featured {
    <div class="jumbotron">
        <div class="container">
            <h1>
                <img src="~/Content/img/logo2.png" id="jumbotron-logo"/>
            </h1>
            <h2>@ViewBag.Message</h2>
            <p>
                This site aims at informing different types of companies with respect to their Information Technology needs
                depending on their idustry, the number of employees, the number of customers, and the number of transactions per month.
            </p>
        </div>
    </div>
}

@using (Html.BeginForm("Index", "Home", FormMethod.Post, new
{
    @id = "CompanyEmployeeFormId",
    data_employeeListAction = @Url.Action("EmployeeList"),
    data_customerListAction = @Url.Action("CustomerList"),
    data_transactionListAction = @Url.Action("TransactionList"),
    @class = "form-horizontal"
}))
{
    <fieldset>
        <legend>Company/Employee</legend>

        <div class="form-group">
            <label class="col-lg-2 control-label">Industry</label>
            <div class="col-lg-10">
                @Html.DropDownList("IndustryId", ViewBag.Company as SelectList,
                    "Select an industry", new {@id = "IndustryId", @class = "form-control"})
            </div>
        </div>

        <div class="form-group" id="EmployeesDiv" style="display: none">
            <label class="col-lg-2 control-label">Employees</label>
            <div class="col-lg-10">
                <select id="Employees" name="Employees" class="form-control"></select>
            </div>
        </div>

        <div class="form-group" id="CustomersDiv" style="display: none">
            <label class="col-lg-2 control-label">Customers</label>
            <div class="col-lg-10">
                @Html.DropDownList("Customers", ViewBag.Customer as SelectList,
                    "Select number of Customers", new {@id = "Customers", @class = "form-control"})
            </div>
        </div>

        <div class="form-group" id="TransactionsDiv" style="display: none">
            <label class="col-lg-2 control-label">Transactions per month</label>
            <div class="col-lg-10">
                @Html.DropDownList("Transactions", ViewBag.TransactionPm as SelectList,
                    "Select number of Transactions per Month", new {@id = "Transactions", @class = "form-control"})
            </div>
        </div>

        <div class="form-group">
            <div class="col-lg-10 col-lg-offset-2">
                <button type="submit" class="btn btn-primary" id="Submit" style="display: none">Submit</button>
            </div>
        </div>
    </fieldset>
}

@section scripts {
    <script src="@Url.Content("~/Scripts/app/industry-select-listener.js")"></script>
    <script src="@Url.Content("~/Scripts/app/employee-select-listener.js")"></script>
    <script src="@Url.Content("~/Scripts/app/customer-select-listener.js")"></script>
    <script src="@Url.Content("~/Scripts/app/transaction-select-listener.js")"></script>
}