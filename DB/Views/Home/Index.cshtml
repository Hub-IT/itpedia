@{
    ViewBag.Title = "Home";
}

@section featured {
    <div class="jumbotron">
        <div class="container">
            <h2>@ViewBag.Message</h2>
            <p style="font-size: 1.4em; font-style: italic">
                This website is a joint initiative of students at DEREE Computer Information Systems academic department and BYTE Computer SA.
            </p>
            <p style="font-size: 1.4em; font-style: italic">
                It serves as decision support tool for new entrepreneurs and business firms, aiming to produce the most suitable Information Technology configuration for different types of companies according to the industry, number of employees, number of customers, and number of transactions per month.
            </p>
            <p style="font-size: 1.4em; font-weight: bold">
                Please choose from the options below to view the recommended solution set.
            </p>
        </div>
    </div>
}

@using (Html.BeginForm("NewRequest", "Home", FormMethod.Post, new
{
    @id = "CompanyEmployeeFormId",
    data_employeeListAction = @Url.Action("EmployeeList"),
    data_customerListAction = @Url.Action("CustomerList"),
    data_transactionListAction = @Url.Action("TransactionList"),
    @class = "form-horizontal"
}))
{
    <div class="row">
        <div class="form-group">
            <label class="col-sm-1 control-label">Industry</label>
            <div class="col-sm-5">
                @Html.DropDownList("industryCode", ViewBag.IndustrySelectList as SelectList,
                    "Select an industry", new {@id = "industryCode", @class = "form-control"})
            </div>
            <label class="col-sm-1 control-label">Employees</label>
            <div class="col-sm-5">
                <select id="employeeCode" name="employeeCode" class="form-control" disabled="disabled">
                    <option value="">Select number of employees.</option>
                </select>
            </div>
        </div>
    </div>

    <div class="row">
        <label class="col-sm-1 control-label">Customers</label>
        <div class="col-sm-5">
            @Html.DropDownList("customerCode", ViewBag.CustomerList as SelectList,
                "Select number of customers", new {@code = "customerCode", @class = "form-control", disabled = "disabled"})
        </div>
        <div class="form-group" id="TransactionsDiv">
            <label class="col-sm-1 control-label">Transactions/month</label>
            <div class="col-sm-5">
                @Html.DropDownList("transactionCode", ViewBag.TransactionPmList as SelectList,
                    "Select number of Transactions per Month", new {@code = "transactionCode", @class = "form-control", disabled = "disabled"})
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-5 pull-right">
            <button type="submit" id="SubmitBtn" class="btn btn-primary pull-right" disabled>Submit</button>
        </div>
    </div>
}

@section scripts {
    <script src="@Url.Content("~/Scripts/app/industry-select-listener.js")"></script>
    <script src="@Url.Content("~/Scripts/app/employee-select-listener.js")"></script>
    <script src="@Url.Content("~/Scripts/app/customer-select-listener.js")"></script>
    <script src="@Url.Content("~/Scripts/app/transaction-select-listener.js")"></script>
}