@{
    ViewBag.Title = "Info";
}

<h2>@ViewBag.YouSelected2</h2>
@{
    string[] hardwares = ViewBag.Hardware.Split(',');
    string[] software = ViewBag.Software.Split(',');
    string[] applications = ViewBag.Applications.Split(',');
    string[] networks = ViewBag.Network.Split(',');
    string[] storage = ViewBag.Storage.Split(',');
}

<table border="1" bgcolor="#99ccff" style="width: 100%;">
    <tr>
        <td>
            <img alt="" height="180" width="130" src="/Content/themes/base/images/kattekrab_Mainframe.png" />
        </td>
        @foreach (string word in hardwares)
        {
            <td>@word</td>
        }
    </tr>
    <tr>
        <td>
            <img alt="" height="180" width="130" src="/Content/themes/base/images/software-418231__180.jpg" />
        </td>
        @foreach (string word in software)
        {
            <td>@word</td>
        }
    </tr>
    <tr>
        <td>
            <img alt="" height="180" width="130" src="/Content/themes/base/images/kattekrab_Mainframe.png" />
        </td>
        @foreach (string word in applications)
        {
            <td>@word</td>
        }
    </tr>
    <tr>
        <td>
            <img alt="" height="180" width="130" src="/Content/themes/base/images/kattekrab_Mainframe.png" />
        </td>
        @foreach (string word in networks)
        {
            <td>@word</td>
        }
    </tr>
    <tr>
        <td>
            <img alt="" height="180" width="130" src="/Content/themes/base/images/kattekrab_Mainframe.png" />
        </td>
        @foreach (string word in storage)
        {
            <td>@word</td>
        }
    </tr>
</table>
