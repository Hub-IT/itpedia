<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title &middot ITPedia</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/Content/css")
</head>
<body>
    <header>
        <div class="content-wrapper">
            <div class="float-left">
                <p class="site-title">@Html.ActionLink("IT Pedia", "Index", "Home")</p>
            </div>
            <div class="float-right">
                @*<section id="login">
                        @Html.Partial("_LoginPartial")
                    </section>*@
                <nav>
                    <ul id="menu">
                        <li>@Html.ActionLink("Configuration", "Index", "Home")</li>
                        <li>@Html.ActionLink("Acknowledgment", "Acknowledgment", "Home")</li>
                        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    </ul>
                </nav>
            </div>
        </div>
    </header>
    <div id="body">

        @RenderSection("featured", required: false)

        <div class="content-wrapper main-content clear-fix">

            @RenderBody()

        </div>
    </div>
    <footer>
        <div class="content-wrapper">
            <div class="float-left">
                <p>&copy; @DateTime.Now.Year - IT Pedia </p>
            </div>
        </div>
    </footer>

    <noscript>
        <div>
            <h2>This site requires JavaScript</h2>
        </div>
    </noscript>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/modernizr")

    <script>
        $(function () {
            $('#main').show();
        });
    </script>

    @RenderSection("scripts", required: false)

</body>
</html>