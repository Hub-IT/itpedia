@using DB.Utilities
<!DOCTYPE html>
<html lang="en">
<head>
    <title>@ViewBag.Title &middot ITPedia</title>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />

    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />


    @{
        string themeName = Session["theme_name"] == null ? "cerulean" : (String)Session["theme_name"];
    }

    <link href="@Url.Content("~/Content/bootswatch/" + themeName + "/bootstrap.min.css")" rel="stylesheet" type="text/css" />

    @Styles.Render("~/Content/css")

</head>

<body>
    <div id="wrap">

        <div class="navbar navbar-default navbar-fixed-top" id="top-navbar">
            <div class="container">
                <div class="navbar-header">
                    <a href='@Url.Action("Index", "Home")'>
                        <img src='@Url.Content("~/Content/img/logo.png")'  style="max-width: 35px; margin-top: 10px;" />
                    </a>
                    <button class="navbar-toggle" type="button" data-toggle="collapse" data-target="#navbar-main">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>
                <div class="navbar-collapse collapse" id="navbar-main">
                    <ul class="nav navbar-nav">
                        <li class='@Html.IsActive("Home", "Index")'>
                            @Html.ActionLink("Configuration", "Index", "Home")
                        </li>
                        <li class='@Html.IsActive("Home", "Acknowledgment")'>
                            @Html.ActionLink("Acknowledgment", "Acknowledgment", "Home")
                        </li>
                    </ul>

                    <ul class="nav navbar-nav navbar-right">
                        <li class='@Html.IsActive("Home", "Contact")'>
                            @Html.ActionLink("Contact", "Contact", "Home")
                        </li>
                    </ul>

                </div>
            </div>
        </div>

        <div class="container" id="main-content">
            @RenderSection("featured", required: false)
            <div class="content-wrapper main-content clear-fix">
                @RenderBody()

            </div>
        </div>

        <div id="push"></div>
    </div>


    @*class="navbar navbar-default"*@
    <div id="footer" class="navbar navbar-default">
        <div class="container">
            <p class="navbar-brand">&copy; @DateTime.Now.Year - ITPedia </p>

        </div>
    </div>

    <noscript>
        <div>
            <h2>This site requires JavaScript</h2>
        </div>
    </noscript>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/modernizr")

    <script>
        $(function () {
            $('#main').show();
        });
    </script>

    @RenderSection("scripts", required: false)

</body>
</html>